<%= provide :title, t("home") %>
<h1><%= t("home") %></h1>
<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render "shared/user_info" %>
      </section>
      <section class="micropost_form">
        <%= render "shared/micropost_form" %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3><%= t "microposts_feed" %></h3>
      <%= render "shared/feed" %>
    </div>
  </div>
<% else %>
  <%= link_to t("register"), signup_path , class: "btn btn-primary" %>
<% end %>
