<% provide :title, t("register") %>
<h1 class="text-center"><%= t "register" %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @user, url: signup_path, data: { turbo: false } do |f| %>
      <%= render "shared/error_messages" %>
      <%= f.label :name %>
      <%= f.text_field :name %>
      <%= f.label :email %>
      <%= f.email_field :email %>
      <%= f.label :password %>
      <%= f.password_field :password %>
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation %>
      <%= f.label :dob %>
      <%= f.date_field :dob %>
      <%= f.label :gender %>
      <div class="radio-group">
        <%= f.label :gender_male, class:"radio-inline" do %>
          <%= f.radio_button :gender, Settings.gender_male, checked: true %><%= t "male" %>
        <% end %>
        <%= f.label :gender_female, class:"radio-inline" do %>
          <%= f.radio_button :gender, Settings.gender_female %> <%= t "female" %>
        <% end %>
        <%= f.label :gender_other, class:"radio-inline" do %>
          <%= f.radio_button :gender, Settings.gender_other %> <%= t "other" %>
        <% end %>
      </div>
      <%= f.submit class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
