<% provide :title, @user.name %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <p><%= t "created_at" %>: <%= @user.created_at.strftime("%d/%m/%Y %H:%M:%S") %></p>
      <p><%= t "updated_at" %>: <%= @user.updated_at.strftime("%d/%m/%Y %H:%M:%S") %></p>
    </section>
  </aside>
</div>
